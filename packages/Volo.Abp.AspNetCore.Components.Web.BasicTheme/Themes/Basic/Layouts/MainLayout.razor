@using Volo.Abp.Ui.LayoutHooks
@using Volo.Abp.AspNetCore.Components.Web.Theming.Components.LayoutHooks
@using Volo.Abp.AspNetCore.Components.Web.Theming.Components
@using Volo.Abp.AspNetCore.Components.Web.Theming.Layout
@using Volo.Abp.AspNetCore.Components.Web.BasicTheme.Themes.Basic.Components
@using BreadcrumbItem = Volo.Abp.BlazoriseUI.BreadcrumbItem
@inherits LayoutComponentBase

<Layout>
    <LayoutHeader>
        <TopMenu/>
    </LayoutHeader>

    <LayoutContent Padding="Padding.Is4.OnAll">
        <Container>
            <PageHeader ></PageHeader>
            <PageAlert/>
            <LayoutHook Name="@LayoutHooks.Body.First" Layout="@StandardLayouts.Application"/>
            @Body
            <LayoutHook Name="@LayoutHooks.Body.Last" Layout="@StandardLayouts.Application"/>
            <DynamicLayoutComponent/>
            <UiMessageAlert/>
            <UiNotificationAlert/>
            <UiPageProgress/>
        </Container>
    </LayoutContent>

</Layout>

@code
{
    protected List<BreadcrumbItem> BreadcrumbItems { get; set; } = new();

    protected override Task OnInitializedAsync()
    {
        SetBreadcrumbItemsAsync();
        return base.OnInitializedAsync();
    }

    protected Task SetBreadcrumbItemsAsync()
    {
        return Task.CompletedTask;
    }
}