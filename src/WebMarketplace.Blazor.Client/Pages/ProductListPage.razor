@page "/product/list"
@using Volo.Abp.Application.Dtos
@using WebMarketplace.Products
@inject IProductBuyerAppService ProductBuyerAppService

<ProductCardDeck Products="@Products"/>

@code {
    
    public List<ProductCardDto> Products { get; set; } = new List<ProductCardDto>();
    
    protected override async Task OnInitializedAsync()
    {
        var input = new ProductCardListFilterDto();
        var result = await ProductBuyerAppService.GetProductCardListAsync(input);
        Products = result.Items.ToList();
    }
}